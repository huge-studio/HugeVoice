                                    @if (!string.IsNullOrEmpty(_iPhoneTestResult))
                                    {
                                        <div class="alert @(_iPhoneTestResult.Contains("?") ? "alert-success" : "alert-danger") p-2 mt-2">
                                            <small>@_iPhoneTestResult</small>
                                        </div>
