                                        <li>If audio doesn't work, try refreshing the page</li>
                                    </ul>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    private IJSObjectReference? _jsModule;
    private bool _audioTested = false;
    private string _browserInfo = "";
    private string _audioContextInfo = "Not tested";
    private string _audioTestError = "";
    private string _iPhoneTestResult = "";

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            try
            {
                _jsModule = await JS.InvokeAsync<IJSObjectReference>("import", "./audio.js");
                _browserInfo = await JS.InvokeAsync<string>("eval", "navigator.userAgent");
                
                // Extract browser name for display
                if (_browserInfo.Contains("iPhone"))
                    _browserInfo = "iPhone Safari";
                else if (_browserInfo.Contains("iPad"))
                    _browserInfo = "iPad Safari";
                else if (_browserInfo.Contains("Chrome") && !_browserInfo.Contains("Edge"))
                    _browserInfo = "Chrome";
                else if (_browserInfo.Contains("Firefox"))
                    _browserInfo = "Firefox";
                else if (_browserInfo.Contains("Safari") && !_browserInfo.Contains("Chrome"))
                    _browserInfo = "Safari";
                else if (_browserInfo.Contains("Edge"))
                    _browserInfo = "Edge";
                else
                    _browserInfo = "Unknown";
                
                StateHasChanged();
            }
            catch (Exception ex)
            {
                _audioTestError = $"Failed to load audio module: {ex.Message}";
                StateHasChanged();
            }
        }
    }

    private async Task TestAudio()
    {
        try
        {
            _audioTestError = "";
            
            if (_jsModule != null)
            {
                // Activate audio context first
                var activated = await _jsModule.InvokeAsync<bool>("activateAudioContext");
                
                if (activated)
                {
                    _audioContextInfo = "Activated successfully";
                    
                    // Create a simple test tone (440Hz A note for 0.5 seconds)
                    var testAudioData = GenerateTestTone(440, 0.5, _browserInfo.Contains("iPhone") ? 44100 : 16000);
                    var base64Audio = Convert.ToBase64String(testAudioData);
                    
                    await _jsModule.InvokeVoidAsync("playAudio", base64Audio);
                    
                    _audioTested = true;
                    _audioTestError = "";
                }
                else
                {
                    _audioContextInfo = "Failed to activate";
                    _audioTestError = "Could not activate audio context. User interaction required.";
                }
            }
            else
            {
                _audioTestError = "Audio module not loaded";
            }
            
            StateHasChanged();
        }
        catch (Exception ex)
        {
            _audioTestError = $"Audio test failed: {ex.Message}";
            _audioContextInfo = "Error";
            StateHasChanged();
        }
    }

    private async Task TestIPhoneSpecificAudio()
    {
        try
        {
            _iPhoneTestResult = "";
            
            if (_jsModule != null)
            {
                // iPhone-specific comprehensive test
                var testResults = new List<string>();
                
                // Test 1: Audio context activation
                var activated = await _jsModule.InvokeAsync<bool>("activateAudioContext");
                testResults.Add(activated ? "? Audio context activated" : "? Audio context failed");
                
                if (activated)
                {
                    // Test 2: Get audio context details
                    var contextState = await JS.InvokeAsync<string>("eval", 
                        "window.audioContext ? window.audioContext.state : 'no context'");
                    var sampleRate = await JS.InvokeAsync<string>("eval", 
                        "window.audioContext ? window.audioContext.sampleRate : 'unknown'");
                    
                    testResults.Add($"? Context state: {contextState}");
                    testResults.Add($"? Sample rate: {sampleRate} Hz");
                    
                    // Test 3: Play iPhone-optimized test tone
                    try
                    {
                        var testToneResult = await JS.InvokeAsync<bool>("eval", @"
                            (function() {
                                try {
                                    if (!window.audioContext) return false;
                                    
                                    // iPhone-specific test with multiple frequencies
                                    const oscillator1 = window.audioContext.createOscillator();
                                    const oscillator2 = window.audioContext.createOscillator();
                                    const gainNode = window.audioContext.createGain();
                                    
                                    oscillator1.frequency.setValueAtTime(523, window.audioContext.currentTime); // C5
                                    oscillator2.frequency.setValueAtTime(659, window.audioContext.currentTime); // E5
                                    gainNode.gain.setValueAtTime(0.1, window.audioContext.currentTime);
                                    
                                    oscillator1.connect(gainNode);
                                    oscillator2.connect(gainNode);
                                    gainNode.connect(window.audioContext.destination);
                                    
                                    oscillator1.start(window.audioContext.currentTime);
                                    oscillator2.start(window.audioContext.currentTime);
                                    oscillator1.stop(window.audioContext.currentTime + 0.3);
                                    oscillator2.stop(window.audioContext.currentTime + 0.3);
                                    
                                    return true;
                                } catch (error) {
                                    console.error('iPhone test tone error:', error);
                                    return false;
                                }
                            })()
                        ");
                        
                        testResults.Add(testToneResult ? "? iPhone test tone played" : "? Test tone failed");
                        
                        // Test 4: Volume and device checks
                        testResults.Add("?? Check: Is volume up? Is silent switch OFF?");
                        testResults.Add("?? If no sound: Try headphones or restart Safari");
                        
                    }
                    catch (Exception toneEx)
                    {
                        testResults.Add($"? Test tone error: {toneEx.Message}");
                    }
                }
                
                _iPhoneTestResult = string.Join("\n", testResults);
            }
            else
            {
                _iPhoneTestResult = "? Audio module not loaded";
            }
            
            StateHasChanged();
        }
        catch (Exception ex)
        {
            _iPhoneTestResult = $"? iPhone test failed: {ex.Message}";
            StateHasChanged();
        }
    }

    private byte[] GenerateTestTone(double frequency, double duration, int sampleRate)
    {
        int sampleCount = (int)(duration * sampleRate);
        var samples = new short[sampleCount];
        
        for (int i = 0; i < sampleCount; i++)
        {
            double time = (double)i / sampleRate;
            double amplitude = Math.Sin(2 * Math.PI * frequency * time);
            
            // Apply envelope to avoid clicks
            double envelope = 1.0;
            if (i < sampleRate * 0.05) // 50ms fade in
                envelope = (double)i / (sampleRate * 0.05);
            else if (i > sampleCount - sampleRate * 0.05) // 50ms fade out
                envelope = (double)(sampleCount - i) / (sampleRate * 0.05);
            
            samples[i] = (short)(amplitude * envelope * 0.3 * short.MaxValue); // 30% volume
        }
        
        var bytes = new byte[samples.Length * 2];
        Buffer.BlockCopy(samples, 0, bytes, 0, bytes.Length);
        return bytes;
    }

    public async ValueTask DisposeAsync()
    {
        if (_jsModule != null)
        {
            await _jsModule.DisposeAsync();
        }
    }
}